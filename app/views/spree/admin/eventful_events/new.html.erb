<% content_for :page_title do %>
  <%= link_to Spree.t(:eventful_events), spree.admin_eventful_events_url %> /
  <%= Spree.t(:new_eventful_event) %>
<% end %>

<div data-hook="admin_eventful_event_new_form_header">
  <%= render partial: 'spree/admin/shared/error_messages', locals: { target: @eventful_event } %>
</div>

<div data-hook="admin_eventful_event_new_form">
  <%= form_for [:admin, @eventful_event] do |f| %>
    <fieldset>
      <%= render partial: 'form', locals: { f: f } %>

      <div data-hook="admin_eventful_event_new_form_buttons">
        <%= render partial: 'spree/admin/shared/new_resource_links' %>
      </div>
    </fieldset>
  <% end %>
</div>
